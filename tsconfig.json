{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2021",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "exclude": [
    "tests",
    "dist",
    "node_modules"
  ],
  "include" : [
    "./src"
  ]
}
